    "source-map-loader": "^0.2.4",
    "style-loader": "^1.0.2",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.13.2",
    "webpack-merge": "^4.2.2"
  }
