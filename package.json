{
  "name": "@oat-sa/portal-core",
  "version": "1.2.0",
  "description": "Portal Frontend Core Components",
  "scripts": {
    "build": "webpack --config ./config/webpack.prod.config.js",
    "build:watch": "webpack --config ./config/webpack.prod.config.js --watch --info-verbosity verbose",
    "test": "npm run test:build && npx qunit-testrunner",
    "test:stats": "npx qunit-testrunner --reporter=stats",
    "test:build": "webpack --config ./config/webpack.test.config.js",
    "test:watch": "webpack-dev-server --config ./config/webpack.test.config.js",
    "prepare": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/oat-sa/portal-core-fe.git"
  },
  "keywords": [
    "tao",
