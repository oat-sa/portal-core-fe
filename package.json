    "portal",
    "core"
  ],
  "license": "GPL-2.0",
  "bugs": {
    "url": "https://github.com/oat-sa/portal-core-fe/issues"
  },
  "homepage": "https://github.com/oat-sa/portal-core-fe#readme",
  "dependencies": {
    "fs-extra": "^8.1.0",
    "handlebars": "^4.7.8",
    "idb-wrapper": "^1.7.0",
    "jquery": "^3.7.1",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.23.2",
    "handlebars-loader": "^1.7.3",
    "@babel/preset-env": "^7.22.20",
